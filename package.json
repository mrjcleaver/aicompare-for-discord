{
  "name": "aicompare-for-discord",
  "version": "1.0.0",
  "description": "Multi-AI Query & Comparison Tool for Discord",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:bot": "cd packages/discord-bot && npm run dev",
    "dev:web": "cd packages/web-dashboard && npm run dev",
    "dev:api": "cd packages/api-server && npm run dev",
    "build": "npm-run-all build:*",
    "build:bot": "cd packages/discord-bot && npm run build",
    "build:web": "cd packages/web-dashboard && npm run build",
    "build:api": "cd packages/api-server && npm run build",
    "test": "npm-run-all test:*",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage --selectProjects unit integration",
    "test:load": "artillery run tests/load/basic-load-test.yml",
    "test:ci": "npm-run-all test:unit test:integration test:e2e",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "setup": "npm install && npm run setup:packages",
    "setup:packages": "npm-run-all setup:*",
    "setup:bot": "cd packages/discord-bot && npm install",
    "setup:web": "cd packages/web-dashboard && npm install",
    "setup:api": "cd packages/api-server && npm install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "artillery": "^2.0.3",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "AI Compare Team",
  "license": "MIT"
}