# ===================================================================
# Multi-AI Query & Comparison Tool - Environment Configuration
# ===================================================================

# ===================================================================
# DISCORD BOT CONFIGURATION
# ===================================================================
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Bot settings
DISCORD_GUILD_ID=your_test_guild_id_here
BOT_PREFIX=!
BOT_STATUS=dnd
BOT_ACTIVITY=Comparing AI responses

# ===================================================================
# AI MODEL API KEYS
# ===================================================================
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_openai_org_id_here

# Anthropic API Key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google AI API Key (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_google_ai_api_key_here

# Cohere API Key (https://dashboard.cohere.ai/api-keys)
COHERE_API_KEY=your_cohere_api_key_here

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://aicompare_user:dev_password_123@localhost:5432/aicompare
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aicompare
DB_USER=aicompare_user
DB_PASSWORD=dev_password_123

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=60000

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
# Redis Cache & Queue
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# ===================================================================
# WEB DASHBOARD CONFIGURATION
# ===================================================================
# Next.js/NextAuth settings
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_at_least_32_characters_long

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_here_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_ISSUER=aicompare-for-discord

# Encryption for API keys storage
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters_long
ENCRYPTION_ALGORITHM=aes-256-gcm

# Session settings
SESSION_SECRET=your_session_secret_here_at_least_32_characters_long
SESSION_MAX_AGE=604800000

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_FAILED=true

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
# Environment
NODE_ENV=development

# Server ports
API_PORT=3001
WEB_PORT=3000
WS_PORT=3002

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===================================================================
# AI MODEL CONFIGURATION
# ===================================================================
# Default model settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_MODELS=gpt-4,claude-3-sonnet,gemini-pro

# Query timeouts (in milliseconds)
AI_QUERY_TIMEOUT=30000
PARALLEL_QUERY_LIMIT=4

# Cost tracking (USD per 1K tokens)
OPENAI_GPT4_COST_INPUT=0.03
OPENAI_GPT4_COST_OUTPUT=0.06
ANTHROPIC_CLAUDE_COST_INPUT=0.008
ANTHROPIC_CLAUDE_COST_OUTPUT=0.024
GOOGLE_GEMINI_COST_INPUT=0.00075
GOOGLE_GEMINI_COST_OUTPUT=0.002
COHERE_COMMAND_COST_INPUT=0.0015
COHERE_COMMAND_COST_OUTPUT=0.002

# ===================================================================
# MONITORING & ANALYTICS
# ===================================================================
# Optional: Application monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Optional: Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Health check settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===================================================================
# FILE STORAGE (Optional)
# ===================================================================
# For export features
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# Optional: AWS S3 (for production)
AWS_REGION=us-east-1
AWS_BUCKET_NAME=aicompare-exports
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ===================================================================
# EMAIL CONFIGURATION (Optional)
# ===================================================================
# For notifications (optional feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@aicompare.local

# ===================================================================
# DEVELOPMENT TOOLS
# ===================================================================
# Database admin
PGADMIN_EMAIL=admin@aicompare.local
PGADMIN_PASSWORD=admin123

# Redis admin
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# Debug settings
DEBUG=aicompare:*
VERBOSE_LOGGING=true